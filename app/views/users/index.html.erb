<%- model_class = User -%>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
  <div class="container">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
       <p class="lead"></p>
  </div>
</header>
<div class="container">
<% if !@users.blank? %>
<table class="table table-striped">
  <thead>
    <tr>

      <th>Email</th>
      <th>Admin</th>
      <th></th>

    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
		<% if user.admin == true %>
			<%= check_box_tag(:admin, user.admin, checked=true) %>
		<% end %>
	</td>
        <td>
	<% if user.admin == false %>
		<%= link_to "Edit" , edit_user_registration_path(user) ,:class => "btn btn-mini btn-primary" %>
		<%= link_to "Delete",user, :confirm => "Are you sure to Delete?", :method => "delete", :class => "btn btn-mini btn-danger" %>
	<% end %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
No Users Found
<% end %>
<br/><br/><br/>
</div>
