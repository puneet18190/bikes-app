<% set_meta_tags :title => 'Welcome' %>
<div id="hero">
  <div class="container">
    <!-- starts carousel -->
    <div class="row animated fadeInDown">
      <div class="span12">
        <div id="myCarousel" class="carousel slide">
          <!-- carousel items -->
          <div class="carousel-inner">
            <!-- slide -->
            <div class="active item slide1">
              <div class="row">
                <div class="span6">
                  <%= make_image %>

                </div>
                <div class="span4">
                  <h1>
                    1. Want to turn your <%= domain_suff %> motorcycle in cash?
                  </h1>
                  <p>
                    We buy any used <%= domain_suff %> motorcycle, motorbike. All makes and models bought for cash. We collect direct from your door.
                  </p>
                  <a href="valuation.html" class="btn btn-success btn-large">
                    Yes!
                  </a>
                </div>
              </div>
            </div>
            <!-- slide -->
            <div class="item slide2">
              <div class="row">
                <div class="span4 animated fadeInUpBig">
                  <h1>2. Submit your details for a valuation.</h1>
                  <p>
                    Fill out our simple valuation form or call Phil direct NOW on 0798 4412879
                  </p>
                  <a href="valuation.html" class="btn btn-success btn-large">
                    Valuation now!
                  </a>
                </div>
                <div class="span6 animated fadeInDownBig">
                  <img src="/assets/slide2.png" alt="slide2" />
                </div>
              </div>
            </div>
            <!-- slide -->
            <div class="item slide3">
              <div class="row">
                <div class="span4 animated fadeInUpBig">
                  <h1>3. Accept our offer.</h1>
                  <p>
                    We collect your <%= domain_suff %> bike and leave you with CASH
                  </p>
                  <a href="valuation.html" class="btn btn-success btn-large">
                    What are you waiting for!
                  </a>
                </div>
                <div class="span6 animated fadeInUpBig">
                  <img src="/assets/wallet.jpg" alt="slide3" />
                </div>
              </div>
            </div>
           </div>
          <!-- Carousel nav -->
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
      </div>
    </div>
  </div>
</div>
