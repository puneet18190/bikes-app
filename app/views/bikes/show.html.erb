<%- model_class = Bike -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:make) %>:</strong></dt>
  <dd><%= @bike.make %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @bike.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mileage) %>:</strong></dt>
  <dd><%= @bike.mileage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @bike.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sales) %>:</strong></dt>
  <dd><%= @bike.sales %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attach_file_name) %>:</strong></dt>
  <dd><%= @bike.attach_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attach_content_type) %>:</strong></dt>
  <dd><%= @bike.attach_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attach_file_size) %>:</strong></dt>
  <dd><%= @bike.attach_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attach_updated_at) %>:</strong></dt>
  <dd><%= @bike.attach_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_file_name) %>:</strong></dt>
  <dd><%= @bike.pic_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_content_type) %>:</strong></dt>
  <dd><%= @bike.pic_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_file_size) %>:</strong></dt>
  <dd><%= @bike.pic_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_updated_at) %>:</strong></dt>
  <dd><%= @bike.pic_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bikes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bike_path(@bike), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bike_path(@bike),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
