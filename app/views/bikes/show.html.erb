<div class="container">
<%- model_class = Bike -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:make) %>:</strong></dt>
  <dd><%= @bike.make %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @bike.model %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:mileage) %>:</strong></dt>
  <dd><%= @bike.mileage %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:registration) %>:</strong></dt>
  <dd><%= @bike.registration %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:postcode) %>:</strong></dt>
  <dd><%= @bike.postcode %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:other) %>:</strong></dt>
  <dd><%= @bike.other %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:value_wanted) %>:</strong></dt>
  <dd><%= @bike.value_wanted %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
  <dd><%= @bike.stock %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:sold) %>:</strong></dt>
  <dd><%= @bike.sold %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:actual_purchase_price) %>:</strong></dt>
  <dd><%= @bike.actual_purchase_price %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:amend_description) %>:</strong></dt>
  <dd><%= @bike.amend_description %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:selling_price) %>:</strong></dt>
  <dd><%= @bike.selling_price %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:photos) %>:</strong></dt>
  <dd>
	<% @submission = Submission.find_by_id(@bike.submission_id) %>
	<% if !@submission.nil? %>	
		<% if !@submission.photos.blank? %>
		<% @submission.photos.each do |photo| %>
		    <%= cl_image_tag(photo.path, { size: '125x125', crop: :fit }) %>
		<% end %>
		<% end %>
	<% end %>
	<% if !@bike.photos.blank? %>
		<% @bike.photos.each do |photo| %>
		    <%= cl_image_tag(photo.path, { size: '125x125', crop: :fit }) %>
		<% end %>
	<% end %>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bikes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bike_path(@bike), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bike_path(@bike),
              method: :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
